properties:
  file.basename:
    displayName: Name
  file.name:
    displayName: Name
views:
  - type: table
    name: Ausrüstung
    filters:
      and:
        - file.tags.contains("Gegenstand/Ausrüstung")
    groupBy:
      property: Typ
      direction: ASC
    order:
      - file.name
      - Bezeichnung
      - Typ
      - Kst.
      - Gew.
      - Eigenschaften
    sort:
      - property: Bezeichnung
        direction: ASC
      - property: file.basename
        direction: ASC
    columnSize:
      note.Bezeichnung: 177
      note.Typ: 170
      note.Kst.: 72
    markers: bullet
    nestedProperties: false
    imageFit: contain
